						VpStrs = VpStr.Split(",")
						'Cas 1 : Magic Online
						If VpStrs.Length = 7 AndAlso IsNumeric(VpStrs(1)) Then
							VpQte = CInt(Val(VpStrs(1)))
							VpEdition = VpStrs(4)
							VpName = VpStrs(0)
